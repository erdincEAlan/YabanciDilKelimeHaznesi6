<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/kelimeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/roundedcorner"
        android:backgroundTint="@color/theme_secondary_color"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtOrnekCumle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/sarala"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:text="text"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/txtAnlam"
                app:layout_constraintEnd_toStartOf="@+id/kelimeDuzenleButton"
                app:layout_constraintStart_toEndOf="@+id/txtAnlam"
                app:layout_constraintTop_toTopOf="@+id/txtAnlam" />

            <TextView
                android:id="@+id/txtKelime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/sarala"
                android:text="text"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtAnlam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/sarala"
                android:text="text"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/txtKelime"
                app:layout_constraintStart_toEndOf="@+id/txtKelime"
                app:layout_constraintTop_toTopOf="@+id/txtKelime" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kelimeDuzenleButton"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedcorner_textbox"
                android:backgroundTint="@color/theme_primary_color"
                android:fontFamily="@font/sarala_bold"
                android:text="Duzenle"
                android:textColor="@color/theme_orange_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>
